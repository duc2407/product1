<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Quản Lý</a>
          </div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="/user-page">Doanh thu</a></li>
            <li><a href="/product">Danh sách sản phẩm</a></li>
            <li><a class="btn" style="border: 1px solid black; color: black;" href="">User Login: <%= user.email %></a></li>
          </ul>
        </div>
    </nav>
    <div class="container mt-5">
      <h2 class="text-center mb-4">Biểu Đồ Doanh Thu</h2>
      <canvas id="myChart" width="400" height="200"></canvas>
    </div>
    <table class="table table-bordered mt-5">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Quantily</th>
          <th>Sale</th>
        </tr>
      </thead>
      <tbody>
        <h1 style="text-align:center">Thông tin các sản phẩm đang bán</h1>
          <% for(var i=0; i < product.length; i++) {%>
              <tr>
                <td><%= product[i].name %></td>
                <td><%= product[i].price %></td>
                <td><%= product[i].quantily %></td>
                <td><%= product[i].sale %></td>
              </tr> 
          <%} 
          %>
      </tbody>
    </table>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5','Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9','Tháng 10','Tháng 11','Tháng 12'],
            datasets: [{
              label: 'Doanh Thu',
              data: [200, 1500, 100, 3000, 2000,200, 1500, 100, 3000, 2000, 3000, 4000],
              backgroundColor: 'rgba(75, 192, 192, 0.2)',
              borderColor: 'rgba(75, 192, 192, 1)',
              borderWidth: 2,
              fill: false,
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
      });
    </script>
</body>
</html>